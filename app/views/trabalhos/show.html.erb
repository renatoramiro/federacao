<ul class="breadcrumb">
    <li>
    	<%= link_to "Início", root_path %> <span class="divider">/</span>
    </li>
    <li>
    	<%= link_to "Administração", administracao_index_path %> <span class="divider">/</span>
    </li>
    <li>
    	<%= link_to "Ofertas de Trabalho", trabalhos_path %> <span class="divider">/</span>
    </li>
    <li class="active">
    	Exibir
    </li>
</ul>
<% if !notice.nil? %>
<div class="span5">
	<p class="label success"><%= notice %></p>
</div>
<% end -%>
<div class="well span9">
<p>
  <b>Nome:</b>
  <%= @trabalho.nome %>
</p>

<p>
  <b>Descrição:</b>
  <%= @trabalho.descricao %>
</p>

<p>
  <b>Contato:</b>
  <%= @trabalho.contato %>
</p>
</div>

<% if can? :edit, @trabalho %>
	<%= link_to 'Editar', edit_trabalho_path(@trabalho) %> |
<% end -%>
<%= link_to 'Voltar', trabalhos_path %>
