<ul class="breadcrumb">
    <li>
    	<%= link_to "Início", root_path %> <span class="divider">/</span>
    </li>
    <li class="active">
    	Ofertas de Trabalho
    </li>
</ul>
<h2>Ofertas de Trabalho</h2>
<p>Olha aí quem pode te ajudar com algum trabalho:</p>
<% @trabalhos.each do |trab| %>
<div class="well span8">
	<div class="row">
	  <div class="span6">
	    <h3><%= trab.nome %></h3>
	    <p><%= trab.descricao %></p>
	    <p><b>Contato:</b> <%= trab.contato %></p>
	  </div>
	</div>	
</div>
<p style="font-size: 10px; margin-left: 368px; margin-top: -20px;">Oferta criada em: <%= trab.created_at.strftime('%d-%m-%Y')%></p>
<% end -%>